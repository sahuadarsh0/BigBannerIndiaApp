<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/job_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.100000024">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp">


        <TextView
            android:id="@+id/job_type_text"
            style="@style/TextBlackMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/job_type"
            style="@style/TextBlackSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Job Type"
            android:textStyle="normal"
            app:layout_constraintBaseline_toBaselineOf="@+id/job_type_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/job_description_text" />

        <TextView
            android:id="@+id/job_salary_text"
            style="@style/TextBlackMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Salary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/job_type" />

        <TextView
            android:id="@+id/job_salary"
            style="@style/TextBlackSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rs. 3000"
            android:textStyle="normal"
            app:layout_constraintBaseline_toBaselineOf="@+id/job_salary_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/job_type" />

        <TextView
            android:id="@+id/job_description_text"
            style="@style/TextBlackMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/job_salary" />

        <TextView
            android:id="@+id/job_description"
            style="@style/TextBlackSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="this is vwey good job worjker of my age id acceptable"
            android:textStyle="normal"
            app:layout_constraintBaseline_toBaselineOf="@+id/job_description_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/job_salary" />

        <TextView
            android:id="@+id/job_id_text"
            style="@style/TextBlackMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Job Id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/job_description" />

        <TextView
            android:id="@+id/job_id"
            style="@style/TextBlackSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BBI1442"
            android:textStyle="normal"
            app:layout_constraintBaseline_toBaselineOf="@+id/job_id_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/job_description" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
