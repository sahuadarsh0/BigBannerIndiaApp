<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlackDark</item>
        <item name="colorPrimaryDark">@color/colorLightDark</item>
        <item name="colorAccent">@color/colorBottomDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ToolBarStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="NavigationView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:listDivider">@color/line</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />


    <style name="RoundedButton" parent="Widget.MaterialComponents.Button">

        <item name="cornerRadius">5dp</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@color/colorBottomDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="RoundedButton.fill">
        <item name="backgroundTint">@color/bbi</item>
    </style>

    <style name="RoundedButton.stroke" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">5dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/colorBottomDark</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/bbi</item>
        <item name="strokeWidth">2dp</item>
    </style>


    <style name="SquareButton.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/bbi</item>
        <item name="cornerRadius">3dp</item>
        <item name="backgroundTint">@color/colorDark</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#00FFFFFF</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextBlack">

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blue_800</item>
        <item name="strokeColor">@color/blue_800</item>
        <item name="rippleColor">@color/blue_800</item>
    </style>

    <style name="TextBlackSmall">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
